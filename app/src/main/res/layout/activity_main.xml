<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_takepic"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="拍照"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_record_audio"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/tv_takepic"
        android:layout_marginTop="20dp"
        android:text="录音"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_record_video"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/tv_record_audio"
        android:layout_marginTop="20dp"
        android:text="录制视频"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_codec_video"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/tv_record_video"
        android:layout_marginTop="20dp"
        android:text="codec录制视频"
        android:textColor="#ffffff"
        android:textSize="16sp"/>

</RelativeLayout>
